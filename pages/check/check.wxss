.filter-bar{
  background-color:limegreen;
  padding: 20px 5px;
  color:#fff;
}
.record-wrapper{
  padding: 10px 10px 50px 10px;
  background-color: #fff;
}
.view-group{
  width: 50%;
  padding: 5px;
  display: inline-block;
  font-size: 16px;
  box-sizing: border-box;
}
.view-label{
  display: inline-block;
  text-align: right;
}
.view-value{
  width: 100%;
  height: 30px;
  margin-top: 3px;
  padding: 5px;
  background:#f1f1f1;
  color: #000;
  border-radius: 5px;
  box-sizing: border-box;
  /* box-shadow: 2px 2px 2px #808080 inset; */
}
.record-table{
  max-height: 290px;
  overflow: scroll;
}
.record-row{
  border-bottom: 1px solid #ccc; 
  padding-top: 10px;
}
.table-unit{
  display: inline-block;
  text-align: center;
  font-size: 12px;
}
.th{
  font-weight: bold;
}
.th-order, .td-order{
  width: 10%;
}
.th-money, .td-money{
  width: 15%;
}
.th-time, .td-time{
  width: 30%;
}
.th-method, .td-method{
  width: 20%;
}
.th-direction, .td-direction{
  width: 25%;
}
.td-money{
  color: red;
}
.sum-money{
  margin: 10px 10px;
  float: right;
  font-size: 18px;
}
.sum-money text{
  color: red;
}